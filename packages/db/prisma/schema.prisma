datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String        @id @default(uuid())
  username    String        @unique
  email       String        @unique
  password    String
  role        Role          @default(USER)
  isBlocked   Boolean       @default(false)
  blockedAt   DateTime?
  contest     Contest[]
  leaderboard Leaderboard[]
  submission  Submission[]
}

enum Role {
  ADMIN
  USER
  CREATOR
}

// contest where user can participate
model Contest {
  id          String        @id @default(uuid())
  title       String
  slug        String        @unique
  startTime   DateTime
  status      ContestStatus @default(UPCOMING)
  createdById String
  createdBy   User          @relation(fields: [createdById], references: [id])
  challenges  Challenge[]
  leaderboard Leaderboard[]
  createdAt   DateTime      @default(now())
}

model Challenge {
  id               String       @id @default(uuid())
  slug             String       @unique
  title            String
  description      String // markdown
  requirements     String // markdown
  constraints      String?
  examples         Json?
  difficulty       Difficulty
  maxPoints        Int
  allowedLanguages String[]
  evaluationConfig Json
  startAt          DateTime
  endAt            DateTime
  contestId        String
  contest          Contest      @relation(fields: [contestId], references: [id])
  submissions      Submission[]
  createdAt        DateTime     @default(now())
}

model Submission {
  id          String    @id @default(uuid())
  points      Int
  submittedAt DateTime  @default(now())
  challenge   Challenge @relation(fields: [challengeId], references: [id])
  challengeId String
  user        User      @relation(fields: [userId], references: [id])
  userId      String
}

model Leaderboard {
  id        String  @id @default(uuid())
  rank      Int
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  contest   Contest @relation(fields: [contestId], references: [id])
  contestId String

  @@unique([rank, contestId])
}

enum ContestStatus {
  UPCOMING
  ONGOING
  ENDED
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}
