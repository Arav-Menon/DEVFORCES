datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String        @id @default(uuid())
  username    String
  email       String        @unique
  password    String
  role        Role          @default(USER)
  contest     Contest[]
  leaderboard Leaderboard[]
  submission  Submission[]
}

enum Role {
  ADMIN
  USER
  CREATOR
}

// contest where user can participate
model Contest {
  id          String        @id @default(uuid())
  title       String
  startTime   DateTime
  leaderboard Leaderboard[]
  user        User?         @relation(fields: [userId], references: [id])
  userId      String?
  challenge   Challenge[]

  @@unique([title])
}

model Challenge {
  id           String   @id @default(uuid())
  slug         String   @unique
  title        String   @unique
  description  String
  requirements String
  constraints  String //not required
  examples     String?
  maxPoints    Int
  startAt      DateTime
  contest      Contest? @relation(fields: [contestId], references: [id])
  contestId    String?
}

model Submission {
  id                          String   @id @default(uuid())
  points                      Int
  submittedAt                 DateTime @default(now())
  contestToChallengeMappingId String
  user                        User     @relation(fields: [userId], references: [id])
  userId                      String
}

model Leaderboard {
  id        String  @id @default(uuid())
  rank      Int
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  contest   Contest @relation(fields: [contestId], references: [id])
  contestId String

  @@unique([rank, contestId])
}
